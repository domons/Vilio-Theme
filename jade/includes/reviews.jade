mixin review_item(text, person, position, logo)
	.review-item.wow.fadeIn(data-wow-duration="1s")
		p= text
		h2= person
		h3= position
		img(src=logo alt="").logo

.reviews-section.center
	i.fa.fa-thumbs-up.wow.zoomIn(data-wow-duration="1s")
	.reviews-carousel
		+review_item('They knowledge & enthusiasm is inspiring & they consistently deliver a high level of service', 'John Smith', 'Marketing Director', 'assets/images/examples/blackberry.png')
		+review_item('They knowledge & enthusiasm is inspiring & they consistently deliver a high level of service', 'John Smith', 'Marketing Director', 'assets/images/examples/blackberry.png')
		+review_item('They knowledge & enthusiasm is inspiring & they consistently deliver a high level of service', 'John Smith', 'Marketing Director', 'assets/images/examples/blackberry.png')
